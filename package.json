{
  "name": "helios-seed",
  "private": true,
  "version": "0.1.0",
  "description": "Helios seed mono-repo: diagrams, CI, agents skeleton, policies, extension",
  "workspaces": [
    "agents/*",
    "services/*",
    "apps/*"
  ],
  "scripts": {
    "render:diagrams": "node scripts/render-diagrams.mjs",
    "test": "node --test",
    "lint": "eslint .",
    "format": "prettier -w .",
    "prepare": "husky",
    "ext:pack": "cd apps/extension && mkdir -p ../dist && zip -r ../dist/helios-extension.zip .",
    "package:starter": "node scripts/package-starter.mjs"
  },
  "lint-staged": {
    "*.{js,json,md,mjs,css}": [
      "prettier -w",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "eslint": "^9.10.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  }
}
